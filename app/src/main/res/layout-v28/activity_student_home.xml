<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".StudentHome">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uplayout"
        android:orientation="horizontal"
        app:cardElevation="20dp"
        android:outlineAmbientShadowColor="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Home"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:background="@color/orange"
            android:textAlignment="center"
            android:textStyle="bold"
            android:letterSpacing="0.2"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@id/uplayout"
        android:id="@+id/profile"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ghost_white"
        android:outlineAmbientShadowColor="@color/black"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miles Morals"
                    android:layout_marginTop="10dp"
                    android:textSize="22dp"
                    android:layout_marginLeft="10dp"
                    android:letterSpacing="0.2"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semester: 4"
                    android:layout_marginTop="10dp"
                    android:textSize="22dp"
                    android:layout_marginLeft="10dp"
                    android:letterSpacing="0.2"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:letterSpacing="0.2"
                    android:textColor="@color/alice_blue"
                    android:textStyle="bold"
                    android:backgroundTint="@color/orange"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />


            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/studentanim"
                app:lottie_loop="true">

            </com.airbnb.lottie.LottieAnimationView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/ghost_white"
            android:layout_below="@id/profile">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Semester:-"
                    android:layout_marginTop="30dp"
                    android:textSize="22dp"
                    android:layout_marginLeft="10dp"
                    android:letterSpacing="0.2"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <Spinner
                    android:id="@+id/spinnerSem"
                    style="@style/CardView"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="25dp"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Year:-"
                    android:layout_marginTop="30dp"
                    android:textSize="22dp"
                    android:layout_marginLeft="10dp"
                    android:letterSpacing="0.2"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:outlineAmbientShadowColor="@color/black"
                    app:cardElevation="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center">

                    <Spinner
                        android:id="@+id/spinneryear"
                        style="@style/CardView"
                        android:layout_alignParentTop="true"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@color/dodger_blue">

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@color/dodger_blue">

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="@color/dodger_blue">

                    </androidx.cardview.widget.CardView>



                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


</RelativeLayout>