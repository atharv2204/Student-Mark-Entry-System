<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uplayout"
        android:orientation="horizontal"
        android:outlineAmbientShadowColor="@color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="back"
        android:id="@+id/back"
        android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Register YourSelf"
            android:layout_toRightOf="@+id/back"
            android:paddingStart="10dp"
            android:letterSpacing="0.1"
            android:textAlignment="textStart"
            android:textColor="@color/orange"
            android:textSize="28sp"
            android:textStyle="bold" />
    </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/TeacherReg"
        android:layout_below="@id/uplayout"
        android:layout_marginTop="50dp"
        android:outlineAmbientShadowColor="@color/black"
        app:cardElevation="20dp"
        android:backgroundTint="@color/cornsilk"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/teacheranim"
                app:lottie_loop="true">

            </com.airbnb.lottie.LottieAnimationView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register As Teacher"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/StudentReg"
        android:layout_below="@id/TeacherReg"
        android:layout_marginTop="60dp"
        android:outlineAmbientShadowColor="@color/black"
        app:cardElevation="20dp"
        android:backgroundTint="@color/cornsilk"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/studentanim"
                app:lottie_loop="true">

            </com.airbnb.lottie.LottieAnimationView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register As Student"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>